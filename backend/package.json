{
  "name": "ak-photography-backend",
  "version": "3.0.0",
  "description": "ak photography website backend",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx --watch src/index.ts",
    "start": "cross-env NODE_ENV=production node --env-file .env buildBackend/index.js",
    "build": "tsc -p tsconfig.build.json",
    "build:beDev": "@powershell Remove-Item -Recurse -Force buildBackend && tsc",
    "build:uiDev": "@powershell -Command \"if (Test-Path buildBackend/dist) { Remove-Item -Recurse -Force buildBackend/dist }; cd ../frontend; npm run build; Copy-Item dist -Recurse ../backend/buildBackend/dist\"",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migration:down:prod": "node utils/rollback.js",
    "migration:down:dev": "cross-env NODE_ENV=development tsx src/utils/rollback.ts",
    "generate-thumbnails-once": "ts-node --esm src/utils/generate-thumbnails.js",
    "test:db:up": "docker compose -f docker-compose.test.yml --env-file .env.test up -d",
    "test:db:down": "docker compose -f docker-compose.test.yml down -v",
    "test:all": "npm run test:db:up && cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles || true; npm run test:db:down",
    "test:unit1": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --config=jest.unit1.config.ts --detectOpenHandles --coverage",
    "test:unit2": "cross-env NODE_ENV=test NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --config=jest.unit2.config.ts --detectOpenHandles --coverage"
  },
  "keywords": [],
  "author": "Antti Kortelainen",
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@jest/globals": "^30.0.3",
    "@tsconfig/node22": "^22.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.17",
    "@types/nodemailer": "^6.4.17",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "dependencies": {
    "@sequelize/mysql": "^7.0.0-alpha.45",
    "@tsconfig/node-lts": "^22.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "mysql2": "^3.12.0",
    "nodemailer": "^6.10.0",
    "sequelize": "^6.37.5",
    "sharp": "^0.33.5",
    "umzug": "^3.8.2",
    "zod": "^3.25.46"
  }
}
